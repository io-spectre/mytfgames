{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "src/main",
    "outDir": "out/dist/main",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "paths": {
      "$ipc/*": ["./ipc/*/index.mts"],
      "$main/*": ["./main/*/index.mts"]
    }
  },
  "include": ["src/main/**/*.mts", "forge.env.d.mts"],
  "references": [
    {
      "path": "./tsconfig.ipc.json"
    }
  ]
}
