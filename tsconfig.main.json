{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "src/main",
    "outDir": "out/dist/main",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "paths": {
      "$main/*": ["./main/*/index.mts"]
    }
  },
  "include": ["src/main", "forge.env.d.mts"]
}
