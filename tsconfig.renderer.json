{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src/renderer",
    "rootDir": "src/renderer",
    "outDir": "out/dist/renderer",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "paths": {
      "$ipc/*": ["../ipc/*/index.mjs"]
    }
  },
  "include": [
    "src/renderer/**/*.mts",
    "src/renderer/**/*.tsx",
    "src/renderer/**/*.svg",
    "src/renderer/**/*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.ipc.json"
    }
  ]
}
